{{extend 'layout.html'}}
<div class="py-5 text-center" >
    <div class="container">
      <div class="row">
        <div class="mx-auto col-md-8">
          <h2 class="mb-3">Lista de Clientes</h2>
          <p class="lead">{{=empresa.razaosocial}}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-6 my-1">
                <a class="btn btn-primary btn-block" href="{{=URL('acs_empresa','index')}}">
                    <i class="fa fa-fw fa-arrow-left"></i>
                    Opções
                </a>
            </div>
            <div class="col-md-6 my-1">
                <a class="btn btn-primary btn-block" href="{{=URL('acs_cliente','cadastrar')}}">
                    <i class="fa fa-fw fa-user-plus"></i>
                    Cadastrar
                </a>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group row my-1">
                  <input type="text" class="form-control col-10 col-form-label" name="busca" placeholder="Pesquisa Nome" id="input"/>
                <div class="col-2">
                      <button class="btn btn-primary botao" id="bt" type="button">
                          <i class="fa fa-search"></i>
                      </button>
                </div>
                    </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table table-striped table-borderless">
              <thead>
                <tr>
                  <th scope="col">Cidade</th>
                  <th scope="col">Nome</th>
                  <th scope="col">Telefone</th>
                  <th scope="col" class="text-center">Acessar</th>
                </tr>
              </thead>
              <tbody>
                  {{for row in rows:}}
                <tr>
                  <th scope="row">{{=row.cidade}} {{row.uf}}</th>
                  <td>{{=row.razaosocial_nome}}</td>
                    {{row.celular=(row.celular).replace("(", "").replace(")", "").replace("-", "")}}
                    {{numero=row.celular}}
                {{row.celular="("+(row.celular)[0:2]+")"+(row.celular)[2:7]+"-"+(row.celular)[7:11]}}
                <p>
                  <td>
                      <a  target="_blank" class="text-success" href='https://api.whatsapp.com/send?phone=55{{=numero}}'>
                          <i class="fa fa-fw fa-1x py-1 fa-whatsapp" ></i>
                          {{=row.celular}}
                      </a>
                    </td>
                  <td><a class="btn btn-primary btn-block" href="{{=URL('acs_venda','lista_cliente',args=[row.id,1])}}">Acessar<i class="fa fa-fw fa-sign-in"></i></a></td>
                </tr>
                  {{pass}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <p class="">Você possui {{=total}} Clientes Cadastrados&nbsp;</p>
        </div>
        <div class="col-md-6">
          <div class="row">
          <div class="col-md-12">
            <nav aria-label="Navegação de página exemplo">
  <ul class="pagination justify-content-end">
        {{ if pagina != 1: }}
        <li class="page-item">
            <a class="btn btn-outline-primary m-1" href="{{ =URL(args=pagina-1) }}">
                <i class="fa fa-fw fa-arrow-left"></i>
                Anterior&nbsp;</a>
        </li>
        {{ pass }}

        {{ if pagina != paginas: }}
        <li class="page-item">
             <a class="btn btn-outline-primary m-1" href="{{ =URL(args=pagina+1) }}" >
                Próximo&nbsp;
                <i class="fa fa-fw fa-arrow-right"></i>
            </a>
        </li>
        {{ pass }}
    </ul>
</nav>
</div>
</div>
        </div>
      </div>
    </div>
  </div>

<script>
    var inputElement = document.querySelector('input[name=busca]');
    var btnElement = document.querySelector('button.botao');

    btnElement.onclick = function(){
     var busca= inputElement.value;
        window.location.href = "{{=URL('lista_representante')}}/"+{{=representante.id}}+"/1/"+busca

    }
    $(document).keypress(function(e) {
    if(e.which == 13) {
     var busca= inputElement.value;
        window.location.href = "{{=URL('lista_representante')}}/"+{{=representante.id}}+"/1/"+busca
    }
});
</script>
