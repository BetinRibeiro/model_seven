{{pass}}
 {{comissao=0}}
<div class="py-5 text-center" >
    <div class="container">
      <div class="row">
        <div class="mx-auto col-md-8">
          <h2 class="mb-3">Lista de Recebimentos</h2>
          <p class="lead">{{=representante.nome}}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-4 my-1">
                <a class="btn btn-primary btn-block" href="{{=URL('acs_venda','lista_representante', args=representante.id)}}">
                    <i class="fa fa-fw fa-arrow-left"></i>
                    Voltar
                </a>
            </div>
               <div class="col-md-4 my-1">
                <a class="btn btn-primary btn-block" href="{{=URL('cadastrar', args=representante.id)}}">
                    <i class="fa fa-fw fa-plus"></i>
                    Inserir
                </a>
            </div>
               
              
          </div>
        </div>
        <div class="col-md-6">
         <div class="row">
                <div class="col-md-4 col-4 my-1">
                    <a class="btn btn-secondary btn-block" href="{{=URL(args=[representante.id,primeira_data.month,primeira_data.year])}}">
                        <i class="fa fa-fw fa-chevron-left"></i>&nbsp;Anterior 
                    </a>
                </div>
                <div class="col-md-4 col-4 my-1">
                    <h5 class=" text-center">{{=mes}} {{=ano}}</h5>
                </div>
                <div class="col-md-4 col-4 my-1">
                    <a class="btn btn-secondary btn-block" href="{{=URL(args=[representante.id,ultima_data.month,ultima_data.year])}}">&nbsp;Próximo 
                        <i class="fa fa-fw fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="table-responsive">
            <table class="table table-striped table-borderless">
              <thead>
                <tr>
                  <th scope="col">Data</th>
                  <th scope="col">Tipo</th>
                  <th scope="col">Descrição</th>
                  <th scope="col">Valor</th>
                  <th scope="col">Alterar</th>
                </tr>
              </thead>
              <tbody>
                  {{for row in rows:}}
                <tr>
                  <th scope="row">{{=("{}/{}/{}".format(row.data_ocorrencia.day,row.data_ocorrencia.month,row.data_ocorrencia.year))}}</th>
                    <td>{{=row.tipo}}</td>
                  <th scope="row">{{=row.descricao}}</th>
                  <td>R$ {{="{:,}".format(round(row.valor,1)).replace(",",".")}}0</td>
                    <td><a class="btn btn-primary btn-block" href="{{=URL('alterar',args=row.id)}}">
                    <i class="fa fa-fw fa-pencil"></i>
                    Alterar
                </a></td>
                </tr>
                  {{pass}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p class="">Total de R$ {{="{:,}".format(round(total,1)).replace(",",".")}}0 Recebido</p>
        </div>
    </div>
  </div>
